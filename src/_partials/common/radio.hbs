<label class="radio{{#if class}} {{class}}{{/if}}">
  <input type="radio"
    {{#if id}}id="{{id}}"{{/if}}
    {{#if checked}}checked{{/if}}
    {{#if disabled}}disabled{{/if}}
    {{#if name}}name="{{name}}"{{/if}}
  ><i></i>{{#if text}}<span>{{text}}</span>{{/if}}{{#if @partial-block}}{{> @partial-block }}{{/if}}
</label>